


<h1>Edit News</h1>

<div class="sidebar">


      <form class="d-flex" role="search">
      <%= form_tag search_admin_news_index_path method: :get do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search news..." , class:"form-control me-2" %>
        <%= submit_tag "Search", class:"btn btn-outline-success" %>
      <% end %>
      </form>
  <a href="#">Field</a>
  <a href="#">City</a>
  <a href="#">Category</a>
  <a href="#">News</a>
  <a href="#">State</a>

  <%if user_signed_in?%>
  <%= link_to "logout" ,destroy_user_session_path,data: {"turbo-method": :delete}  ,class:"nav-link" %>
  <%else%>
  <%= link_to "login" ,new_user_session_path  ,class:"nav-link" %>

    <%end%>
</div>
<%= form_for(@news, url: admin_news_path(@news), method: :patch) do |f| %>   



    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
  
    <div class="field">
      <%= f.label :headlines %>
      <%= f.text_field :headlines %>
    </div>
  
    <div class="field">
      <%= f.label :short_description %>
      <%= f.text_area :short_description %>
    </div>
  
    

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>


    <div  class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>

  <div  class="field">
    <%= f.label :state_id %><br>
    <%= f.collection_select :state_id, State.all, :id, :name %>
  </div>
  <div class="field">
      <%= f.label :city_id %><br>
      <%= f.collection_select :city_id,  City.all, :id, :name %>
    </div>
    <div class="field">
    <%= f.label :images, 'Upload Images' %>
    <%= f.file_field :images, multiple: true, accept: 'image/*' %>
  </div>
    <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<%= link_to 'Show', admin_news_path(@news) %> |
<%= link_to 'Back', admin_news_index_path %>
